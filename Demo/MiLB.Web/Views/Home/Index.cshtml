@model Mascot

@{
    ViewBag.Title = "Home Page";
}

<div class="column">
    <img src="/content/images/welcome.png" alt="" />
    
    <p>
        Join us in congratulating all of the winners of @DateTime.Now.Year's Mascot Mania contest!
    </p>
    <p>
        All 160 mascots competed in grueling games of hilarity, including the dunk tank toss, potato sak relay and dodge-pie. There are individual winners from each league, with one overall winner: the @Model.Team.League.Name League's own @Model.Name rooting on the @Model.Team.Name.
    </p>
    <p>
        <a href="/home/champions">See All the Winners</a>
    </p>

    <h1>Congratulations @Model.Name!</h1>

    <img src="/Content/Images/MascotLarge/@(Model.Slug).png" style="width: 95%" />
</div>

